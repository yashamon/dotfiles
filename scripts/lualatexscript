#! /bin/sh

lualatex -halt-on-error -synctex=1 -file-line-error -jobname=backup -gg $1 $2 $3 $4
echo $1 $2 $3 $4
myfile="${3%.*}"
mypdfstring=$myfile".pdf" 
mylogstring=$myfile".log"  
sync=$myfile".synctex.gz"
if ! grep -q Fatal ./build/backup.log; then
echo cool
echo $mypdfstring
mv ./build/backup.pdf $mypdfstring 
mv ./build/backup.synctez.gz $sync
fi
