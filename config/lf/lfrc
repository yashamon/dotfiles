cmd findfile ${{
   res="$(fd . $HOME -H | fzf 2>/dev/tty | sed 's/\\/\\\\/g;s/"/\\"/g')"
   if [ -d "$res" ]; then
      cmd="cd"
   else
      cmd="select"
   fi
 lf -remote "send $id $cmd \"$res\""
 }}

map <a-f> :findfile

 cmd findfileroot ${{
    res="$(fd . '/' -H | fzf --reverse --header='Jump to location')"
    if [ -d "$res" ]; then
        cmd="cd"
    else 
        cmd="select"                                                       
    fi
    lf -remote "send $id cd $HOME"
    lf -remote "send $id $cmd \"$res\""
}}
map gf :findfileroot

