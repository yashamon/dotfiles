cmd spaste &{{
set -- $(cat ~/.local/share/lf/files)
    mode="$1"
    shift
    case "$mode" in
        copy)
            rsync -a --no-compress --ignore-existing -- "$@" .;;
        move) mv -n -- "$@" .;; 
    esac
    rm ~/.local/share/lf/files
    lf -remote "send clear"  
    lf -remote "send reload" 
    lf -remote "send echomsg "copysucess""
}}

